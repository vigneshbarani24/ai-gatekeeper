# AI Gatekeeper Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# ============================================================================
# Server
# ============================================================================
HOST=0.0.0.0
PORT=8000

# CORS (frontend URLs)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ============================================================================
# Twilio (https://console.twilio.com)
# ============================================================================
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_TWIML_APP_SID=APxxxxx

# WebSocket URL (update with your Cloud Run URL or ngrok for local)
TWILIO_STREAM_URL=wss://your-domain.com/streams/audio

# ============================================================================
# ElevenLabs (https://elevenlabs.io)
# ============================================================================
ELEVENLABS_API_KEY=sk_xxxxx
ELEVENLABS_AGENT_ID=your_agent_id_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Model settings
ELEVENLABS_MODEL=eleven_turbo_v2_5
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75

# WebSocket URL (don't change)
ELEVENLABS_WEBSOCKET_URL=wss://api.elevenlabs.io/v1/convai/conversation

# ============================================================================
# Google Cloud (https://console.cloud.google.com)
# ============================================================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
VERTEX_AI_LOCATION=us-central1

# Gemini Models
GEMINI_MODEL_FAST=gemini-2.0-flash-exp
GEMINI_MODEL_ANALYSIS=gemini-1.5-pro

# ============================================================================
# Supabase (https://supabase.com)
# ============================================================================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJxxxxx
SUPABASE_ANON_KEY=eyJxxxxx

# ============================================================================
# Redis (Optional - Upstash for serverless)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Vector Search
# ============================================================================
VECTOR_SEARCH_INDEX_ENDPOINT=your-vertex-ai-endpoint
SCAM_SIMILARITY_THRESHOLD=0.85

# ============================================================================
# Security
# ============================================================================
JWT_SECRET=your-jwt-secret-here-generate-with-openssl-rand-hex-32
WEBHOOK_SECRET=your-webhook-secret-here

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SCAM_DETECTION=true
ENABLE_CONTACT_WHITELIST=true
ENABLE_CALL_RECORDING=false  # Check local laws!
ENABLE_FRONTEND_BROADCAST=true

# ============================================================================
# User Configuration
# ============================================================================
USER_NAME=Your Name

# System Prompt (optional override)
# SYSTEM_PROMPT_TEMPLATE=Custom prompt with {user_name} placeholder...

# ============================================================================
# Frontend
# ============================================================================
FRONTEND_URL=http://localhost:5173

# ============================================================================
# Audio Settings
# ============================================================================
AUDIO_SAMPLE_RATE=8000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=160

# ============================================================================
# Data Retention
# ============================================================================
AUDIO_RETENTION_HOURS=24
TRANSCRIPT_RETENTION_DAYS=30
ENABLE_PII_REDACTION=true

# ============================================================================
# Contacts & Blacklist Paths
# ============================================================================
CONTACTS_FILE=./data/contacts.json
BLACKLIST_FILE=./data/blacklist.json

# ============================================================================
# Logging
# ============================================================================
LOG_FILE=  # Leave empty for stdout, or set to /var/log/ai-gatekeeper.log

# Sentry (optional error tracking)
SENTRY_DSN=
